<div id="login-wrapper">
  <% if flash[:notice]%>
    <p id="flash"><%= flash[:notice]%></p>
  <% end%>
  <img class="cinderella" src="/white-cinderella.svg" alt="">
  <h2>Cinderella</h2>
  <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <img src="/mail.svg" alt="">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "メールアドレス"%>
    </div>

    <div class="field">
      <img src="/key.svg" alt="">
      <%= f.password_field :password, autocomplete: "off", placeholder:"パスワード" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "ログイン情報を保存する" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>